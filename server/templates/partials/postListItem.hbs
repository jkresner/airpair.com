<article class="posttile" itemscope="itemscope" itemtype="http://schema.org/BlogPosting" itemprop="blogPost">
  <a href="{{ url }}" title="{{ title }}" target="_self" rel="bookmark">
    <header class="entry-header">
      <img class="entry-header-image" itemprop="image" src="{{ htmlHead.ogImage }}" align="left" />
      <div class="glass"></div>
      <p>
        <span class="entry-categories">
        {{#each tags}}
          <em>{{ slug }}</em>
        {{/each}}
        </span>
        {{ htmlHead.description }}
      </p>
    </header>

    <div class="entry-content" itemprop="text">
      {{#if stats.reviews}}
      <h6><b>{{stats.reviews}}</b> x</h6>
      <div class="stars">{{post_stars stats.rating}}</div>
      {{/if}}
      <h2 class="entry-title" itemprop="headline">{{ title }}</h2>

      <span class="entry-author" itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person">
        <span class="entry-author-name" itemprop="name">{{ by.name }}</span>
      </span>

    </div>
  </a>
  <footer class="entry-footer">
    <img class="entry-author-img" itemprop="image" src="{{ by.avatar }}?s=50" />
  </footer>
</article>
