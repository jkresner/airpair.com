{{#if ads }}{{#with ads.top}}{{>banner}}{{/with}}{{/if}}

<article class="blogpost">

{{#with r}}

  <h1 class="entry-title" itemprop="headline">{{ title }}</h1>

  {{#unless published}}
    {{#if submitted }}
    <section class="notifications">
      <div id="postinreview">
        <h2><img ng-src="https://static.airpair.com/img/author/airpair-author.png" /> This post is under <a href="/posts/in-community-review" target="_self">Community Review</a></h2>
        {{#unless publishReady}}
        <p>Posts need a minimum of <a href="#reviews">3 reviews</a> with a minimum 3.5/5 star rating, to be published.</p>
        {{/unless}}
      </div>
    </section>
    {{/if}}
  {{/unless}}

  <div class="railMarker"></div>

  <h4 id="table-of-contents">Table of Contents</h4>
  {{{toc}}}

  <figure class="author">
    <img alt="{{by.name}}" src="{{by.avatar}}?s=100">
    <hr />
    <div>
      <label>{{ by.name }}</label>
      {{!-- <social-links profile='{{ JSON by.social }}'></social-links> --}}
      <figcaption>
        {{by.bio}}
      </figcaption>
    </div>
    <hr />
  </figure>

  {{#if assetUrl }}
  <p class="asset">{{ v1postAssetUrlToMedia assetUrl }}</p>
  {{/if}}
  <hr />

  <post no-compile>{{{ html }}}</post>

  {{#if published }}
  <div class="share">
    <div class="pw-widget pw-size-large pw-counter-show" pw:twitter-via="airpair">
      <a class="pw-button-twitter"></a><a class="pw-button-facebook"></a><a class="pw-button-linkedin"></a><a class="pw-button-googleplus"></a>{{!-- <a class="pw-button-reddit"></a> --}}
      <a class="pw-button-post"></a>
    </div>
  </div>
  {{/if}}

{{/with}}

  <div class="rail1CTA">
    {{#if r.github }}
    {{#if r.stars }}
      <post-rail-stars></post-rail-stars>
    {{/if}}
    {{/if}}

{{#if r.published }}

  {{#if authenticated }}
    <h6>Need 1 on 1 expert help?</h6>

    <div class="gethelp">
      <img src="{{r.by.avatar}}?s=100" />
      <span><b>PAIR UP</b> with<br /> experts like <br />{{r.by.name}}</span>
        {{#if r.by.expertId }}
          <a id="postSideBookAuthor" data="{{r.by.expertId}}" track-click="book" href="/billing/book/{{r.by.expertId}}" class="btn btn-sm">Book</a>
        {{/if}}
    </div>

  {{else}}

    {{#with ads.side}}{{>banner}}{{/with}}

  {{/if}}

{{/if}}


{{#with r}}

    {{!-- <h6>Help make this post better!</h6>
    <div class="fork">
      <a href="/posts/fork/{{_id}}" class="btn">Fork this post!</a>
      <p>Forked <b>{{forkers.length}}</b> times so far</p>
    </div>
     --}}

  </div>

  {{#if references}}
  <div id="references" no-compile>
    <h4>References</h4>
    <ul class="references">
      {{#each references}}<li>{{{this}}}</li>{{/each}}
    </ul>
  </div>
  {{/if}}

</article>

{{#if submitted }}
  <div id="reviews" post-reviews reviews='{{ JSON reviews }}' byid="{{by.userId}}"></div>
{{/if}}


{{#if showDisqus }}
<div id="disqus_thread"></div>
{{/if}}

{{/with}}


{{#if ads }}{{#with ads.bottom}}{{>banner}}{{/with}}{{/if}}


{{#with r}}

<footer class="postfooter {{#if showDisqus }}afterdisqus{{/if}}">
  <h5>Tagged under</h5>
  <ul class="posttags">{{#each tags}}
    <li><a href="/posts/tag/{{ slug }}" target="_self">{{ slug }}</a></li>
  {{/each}}
  </ul>

  {{#if published }}
  <div class="share-horizontal">
    <div class="pw-widget pw-counter-vertical" pw:twitter-via="airpair">
      <a class="pw-button-twitter pw-look-native"></a>
      <a class="pw-button-googleplus pw-look-native"></a>
      <a class="pw-button-facebook pw-look-native"></a>
      <a class="pw-button-linkedin pw-look-native"></a>
      <a class="pw-button-tumblr pw-look-native"></a>
      <a class="pw-button-reddit pw-look-native"></a>
      <a class="pw-button-email pw-look-native"></a>
    </div>
  </div>
  {{/if}}
</footer>

{{#if published }}
<div id="posts">
  <section id="allposts" class="similar">
    <h3 class="underline">Similar posts <a href="/software-experts" class="btn btn-sm btn-inverse" target="_self">All posts</a></h3>
    <div class="similar nostars">{{#each similar}}

{{!-- in use [2015.12.06] --}}
<article class="posttile" itemscope="itemscope" itemtype="http://schema.org/BlogPosting" itemprop="blogPost">
  <a href="{{ url }}" title="{{ title }}" target="_self" rel="bookmark">
    <header class="entry-header">
      <img class="entry-header-image" itemprop="image" src="{{ htmlHead.ogImage }}" align="left" />
      <div class="glass"></div>
      <p>
        <span class="entry-categories">
        {{#each tags}}
          <em>{{ slug }}</em>
        {{/each}}
        </span>
        {{ htmlHead.description }}
      </p>
    </header>

    <div class="entry-content" itemprop="text">
      {{#if stats.reviews}}
      <h6><b>{{stats.reviews}}</b> x</h6>
      <div class="stars" stars val="{{stats.rating}}"></div>
      {{/if}}
      <h2 class="entry-title" itemprop="headline">{{ title }}</h2>

      <span class="entry-author" itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person">
        <span class="entry-author-name" itemprop="name">{{ by.name }}</span>
      </span>

    </div>
  </a>
  <footer class="entry-footer">
    <img class="entry-author-img" itemprop="image" ng-src="{{ by.avatar }}?s=50" />
  </footer>
</article>

    {{/each}}
    </div>
  </section>
</div>
{{/if}}

{{/with}}
