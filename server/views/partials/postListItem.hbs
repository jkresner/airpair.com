<article itemscope="itemscope" itemtype="http://schema.org/BlogPosting" itemprop="blogPost" class="{{#if reviewReady}}reviewReady{{/if}}">
  <a href="{{ url }}" title="{{ title }}" target="_self" rel="bookmark">
    <header class="entry-header">
      <img class="entry-header-image" itemprop="image" src="{{ meta.ogImage }}" align="left" />
      <span class="entry-categories">
        {{#each tags}}{{!-- http://www.airpair.com/{{slug}} --}}
          <em>{{ slug }}</em><br />
        {{/each}}
      </span>


      <p class="entry-meta">
        <span class="entry-author" itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person">
          <span class="entry-author-name" itemprop="name">{{ by.name }}</span>
          <img class="entry-author-image" itemprop="image" src="{{ by.avatar }}?s=50" align="left" />
          {{#if published}}
          <time class="entry-time" itemprop="datePublished" datetime="{{ isoMoment published }}">{{ dateFormat published 'DD MMM, YYYY' }}</time>
          {{else}}
          <time>Unpublished</time>
          {{/if}}
        </span>
      </p>
    </header>
    <div class="entry-content" itemprop="text">
      <h2 class="entry-title" itemprop="headline">{{ title }}</h2>
      <p>{{ meta.description }}</p>
    </div>
  </a>
  <footer class="entry-footer">

    <bookmarkerserver type="'post'" object-id="'{{_id}}'"></bookmarkerserver>

  </footer>
</article>
