<article class="blogpost">

{{#with r}}
  <h1 class="entry-title" itemprop="headline">{{ post.title }}</h1>

  {{#unless published}}
    {{#if submitted }}
    <section class="notifications">
      <div id="postinreview">
        <h2><img ng-src="https://static.airpair.com/img/author/airpair-author.png" /> This post is under <a href="/posts/in-community-review" target="_self">Community Review</a></h2>
        {{#unless publishReady}}
        <p>Posts need a minimum of <a href="#reviews">3 reviews</a> with a minimum 3.5/5 star rating, to be published.</p>
        {{/unless}}
      </div>
    </section>
    {{/if}}
  {{/unless}}
{{/with}}

{{#with r.post}}
  <div class="railMarker"></div>

  <h4 id="table-of-contents">Table of Contents</h4>
  {{{html.toc}}}

  <figure class="author">
    <img alt="{{by.name}}" src="{{by.avatar}}?s=100">
    <hr />
    <div>
      <label>{{ by.name }}</label>
      {{!-- <social-links profile='{{ JSON by.social }}'></social-links> --}}
      <figcaption>
        {{by.bio}}
      </figcaption>
    </div>
    <hr />
  </figure>

  {{#if assetUrl }}
    <p class="asset"><img src="{{ assetUrl }}" /></p>
  {{/if}}
  <hr />

  <post no-compile>{{{ html.body }}}</post>
{{/with}}

  {{#if r.published }}
  <div class="share">
    <div class="pw-widget pw-size-large pw-counter-show" pw:twitter-via="airpair">
      <a class="pw-button-twitter"></a><a class="pw-button-facebook"></a><a class="pw-button-linkedin"></a><a class="pw-button-googleplus"></a>{{!-- <a class="pw-button-reddit"></a> --}}
      <a class="pw-button-post"></a>
    </div>
  </div>
  {{/if}}

{{#with r.post}}
  <div class="rail1CTA">
    {{#if github }}
    {{#if stars }}
      <post-rail-stars></post-rail-stars>
    {{/if}}
    {{/if}}

    {{!-- <h6>Help make this post better!</h6>
    <div class="fork">
      <a href="/posts/fork/{{_id}}" class="btn">Fork this post!</a>
      <p>Forked <b>{{forkers.length}}</b> times so far</p>
    </div>
     --}}

  </div>

  {{#if references}}
  <div id="references" no-compile>
    <h4>References</h4>
    {{{ html.reference }}}
    {{!-- <ul class="references">
      {{#each references}}<li>{{{this}}}</li>{{/each}}
    </ul> --}}
  </div>
  {{/if}}

</article>

{{/with}}

{{#if r.submitted }}
  <div id="reviews" post-reviews reviews='{{ JSON r.post.reviews }}' byid="{{r.post.by._id}}"></div>
{{/if}}
{{!--

{{#if showDisqus }}
<div id="disqus_thread"></div>
{{/if}} --}}


{{#with r}}

<footer class="postfooter {{#if showDisqus }}afterdisqus{{/if}}">
  <h5>Tagged under</h5>
  <ul class="tags">{{#each post.tags}}<li><a href="{{ url }}" target="_self" title="{{name}} tutorials & {{short}} guides">{{ slug }}</a></li>{{/each}}</ul>

  {{#if published }}
  <div class="share-horizontal">
    <div class="pw-widget pw-counter-vertical" pw:twitter-via="airpair">
      <a class="pw-button-twitter pw-look-native"></a>
      <a class="pw-button-googleplus pw-look-native"></a>
      <a class="pw-button-facebook pw-look-native"></a>
      <a class="pw-button-linkedin pw-look-native"></a>
      <a class="pw-button-tumblr pw-look-native"></a>
      <a class="pw-button-reddit pw-look-native"></a>
      <a class="pw-button-email pw-look-native"></a>
    </div>
  </div>
  {{/if}}
</footer>

{{#if published }}{{#if similar }}
<div id="posts">
  <section id="allposts" class="similar">
    <h3 class="underline">Similar posts <a href="/software-experts" class="btn btn-sm btn-inverse" target="_self">All posts</a></h3>
    <div class="similar ">{{#each similar}}{{>postTile this}}{{/each}}</div>
  </section>
  {{#if other }}
  <section id="allposts" class="byauthor">
    <h3 class="underline">Other posts {{by.name}}</h3>
    <div class="similar">{{#each other}}{{>postTile this}}{{/each}}</div>
  </section>
  {{/if}}

</div>
{{/if}}{{/if}}

{{/with}}
