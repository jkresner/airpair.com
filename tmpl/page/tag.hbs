    {{!-- <img src="/static/img/css/tags/{{r.slug}}.png" class="{{r.slug}}" /> --}}

<section id="tag">

  <h1>Learn {{r.name}} from top {{r.short}} developers</h1>

  {{#with r.posts}}

{{#if featured}}
  <div class="nobookmarks">
    {{#each featured}}{{> postTile this}}{{/each}}
  </div>

  {{#if latest}}
    <h2 class="underline">Latest {{../name}} software tutorials & guides
  {{!--     <a href="/author/new" class="btn btn-inverse" target="_self">Contribute a post</a> --}}
    </h2>
  {{/if}}
{{/if}}

{{#if latest}}
  <div class="popular nobookmarks">
    {{#each latest}}{{> postTile this}}{{/each}}
  </div>
{{else}}
  <p>No posts authored for <code>{{tag.name}}</code>.
  <a href="/author/new">Be the first!</a></p>
{{/if}}

{{#if top}}
  <div>
    <h2 class="underline">Highest rated posts</h2>
    {{#each top}}{{> postTile this}}{{/each}}
  </div>
{{/if}}


{{#if popular}}
  <div class="popular nostars nobookmarks">
    <h2 class="underline">Popular software blog posts
      <a href="https://author.airpair.com/" class="btn btn-inverse" target="_self">Contribute a post</a>
    </h2>
    {{#each popular}}{{> postTile this}}{{/each}}
  </div>
{{/if}}


{{#if comp}}
  <div class="popular nobookmarks">
    <h2 class="underline">2015 Writing Competition Prize winners
      <a href="/100k-writing-competition" class="btn btn-inverse" target="_self">See all winners</a>
    </h2>
    {{#each comp}}{{> postTile this}}{{/each}}
  </div>
{{/if}}

  {{/with}}

</section>

<section id="tags">

{{#if r.related}}
  <h3>Software Technologies related to {{r.name}}</h3>
  <ul class="related tags">
    {{#each r.related}}<li><a href="{{url}}">{{name}}</a> ({{posts}})</li>{{/each}}
  </ul>
{{!--   <a href="/learn-code">Learn code by programming tag<a/> --}}
{{/if}}

</section>



