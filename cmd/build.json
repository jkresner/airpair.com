{
  "browserify": {
    "transforms": {
      "ngAnnotate":          true,
      "stringify":           [".html"],
      "es6ify":              { "exclude": "components" }
    },
    "src":                   "web/js",
    "dest":                  "build",
    "entries":               ["app.js"]
  },
  "dirs": {
    "web":                   "web",
    "dev":                   "web/build",
    "dist":                  "web/dist",
    "server":                "server"
  },
  "dist":                    {},
  "less": {
    "src":                   "css",
    "dest":                  "build/css",
    "imports":               ["css","css/env/dev"]
  },
  "log": {
    "config":                false,
    "times":                 false,
    "wire":                  false
  },
  "nodemon": {
    "dirs":                  ["server","server/.lib","es","tmpl"],
    "config": {
      "restartable":         false,
      "verbose":             true,
      "ignore":              ["*DS_Store","web/*","test/*","cmd/*"],
      "stdout":              true,
      "stdin":               true,
      "execMap":             { "js": "node" },
      "script":              "index.js",
      "ext":                 "js json hbs env"
    }
  },
  "watch": {
    "livereload":            { "port": 35729 },
    "path": {
      "browserify":          ["es/*.js",
                              "web/js/*.js",
                              "web/js/**/*.html",
                              "web/js/**/*.js"],
      "livereload":          ["tmpl/**/*.hbs",
                              "tmpl/**/*.js",
                              "web/build/css/*.css",
                              "web/build/js/*.js"]
    }
  }
}
